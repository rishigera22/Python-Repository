#Project 3 Magic 8 Ball using Class Objects

import random as r
from os import startfile

class magic8ball:
    def __init__(self,name):
        self.name = name          
        self.mQuestion = []
        
        self.start_game()      
        
    def start_game(self):
        
        print("Hello " + self.name)
        y = 0
        filepath = r"C:\Users\f_zer\Downloads\Python Masterclass\Questions.txt"
        
        while y <= 1:
            Question = input("Ask Question Here if empty program will break ")
            if Question == "":
                y = 1
                print("Thankyou for Playing " + self.name)
                
                
                #Clear Any Text in the CSV File
                              
                f = open(filepath, "w")
                f.truncate()
                
                #Append Questions to the CSV File
                
                f = open(filepath, "a",newline = '')
                
                for q in self.mQuestion:
                    f.write(q)
                    f.close               
                
                #Open CSV File to Verify Update
                
                startfile(filepath)
                
                break
            else:
                self.mQuestion.append(Question)
                result = r.randint(1,7)
                Responses = ["it is Certain",
                     "You may rely on it",
                     "As I see it, yes",
                     "Outlook Looks good",
                     "Most likely",                 
                     "It is decidedly so",
                     "Without a doubt",
                     "Yes definitely"]
                print(Responses[result])               
        
              
testrun = magic8ball("Batman")
